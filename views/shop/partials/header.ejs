<!DOCTYPE html>
<html>
  <head>
    <% if (pageName) { %>
    <title>EpicFPV | <%= pageName %></title>
    <%} else {%>
    <title>EpicFPV</title>
    <% } %>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSRF Token for AJAX requests -->
    <script>
      $.ajaxSetup({
        headers: {
          'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
        }
      });
    </script>
  </head>
  <body>
    <div id="page-container">
      <div id="content-wrap">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="/">
              <img src="/images/epicfpv-logo.png" alt="EpicFPV" class="logo">
            </a>

            <!-- Search Bar -->
            <div class="search-container flex-grow-1">
              <form class="search-form" action="/products/search" method="GET">
                <div class="input-group">
                  <input type="search" class="form-control search-input" placeholder="FPV STORE" name="search">
                  <div class="input-group-append">
                    <button class="btn btn-search" type="submit">
                      <i class="fas fa-microphone"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>

            <!-- User Account & Cart -->
            <div class="nav-icons">
              <% if (login) { %>
                <div class="user-menu">
                  <a href="/user/profile" class="nav-icon">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                  </a>
                  <a href="/user/logout" class="nav-icon ml-3">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                  </a>
                </div>
              <% } else { %>
                <div class="auth-buttons">
                  <a href="/user/signin" class="btn btn-outline-primary mr-2">
                    <i class="fas fa-sign-in-alt"></i> Sign In
                  </a>
                  <a href="/user/signup" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Sign Up
                  </a>
                </div>
              <% } %>
              <a href="/shopping-cart" class="nav-icon ml-3">
                <i class="fas fa-shopping-cart"></i>
                <% if(session.cart) { %>
                  <span class="cart-badge"><%= session.cart.totalQty %></span>
                <% } %>
              </a>
            </div>
          </div>
        </nav>
        <!-- Main Content -->
        <main>
