<nav class="categories-nav">
  <div class="container-fluid">
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="/products" class="nav-link category-filter" data-category="all">All Products</a>
      </li>
      <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
        <% categories.forEach(function(category) { %>
          <li class="nav-item">
            <a href="/products/<%= category.slug %>" class="nav-link category-filter" data-category="<%= category.slug %>">
              <%= category.title %>
            </a>
          </li>
        <% }); %>
      <% } %>
    </ul>
  </div>
</nav>
