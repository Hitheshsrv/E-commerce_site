<%- include("partials/header") %>
<%- include("partials/categories-navbar") %>

<!-- Top Carousel -->
<div id="topCarousel" class="carousel slide mb-4" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#topCarousel" data-slide-to="1"></li>
    <li data-target="#topCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/images/slide1.jpg" alt="First slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slide2.jpg" alt="Second slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/images/slide3.jpg" alt="Third slide" />
    </div>
  </div>
  <a class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#topCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr class="gradient-style" />

<!-- Latest products slider -->
<div class="container py-5">
  <div id="products-carousel" class="carousel slide" data-ride="carousel">
    <div class="row align-items-center mb-4">
      <div class="col-md-8">
        <h2 class="mb-0">Latest Products</h2>
      </div>
      <div class="col-md-4 text-md-right">
        <div class="carousel-controls">
          <button class="btn btn-outline-secondary mr-2" href="#products-carousel" data-slide="prev">
            <i class="fa fa-chevron-left"></i>
          </button>
          <button class="btn btn-outline-secondary" href="#products-carousel" data-slide="next">
            <i class="fa fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>

    <div class="carousel-inner">
      <!-- First slide -->
      <div class="carousel-item active">
        <div class="row">
          <% for(let i=0; i<3 && i<products.length; i++) { %>
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="single-product">
              <a class="product-img" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                <img src="<%= products[i].imagePath %>" alt="<%= products[i].title %>" class="img-fluid" />
              </a>
              <div class="product-info p-3">
                <a class="title-link" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                  <h5 class="product-title mb-2"><%= products[i].title %></h5>
                </a>
                <div class="price mb-3">₹<%= products[i].price %></div>
                <% if(products[i].available) { %>
                <a href="/add-to-cart/<%= products[i]._id %>" class="btn btn-primary btn-block">Add to Cart</a>
                <% } else { %>
                <button class="btn btn-danger btn-block" disabled>Sold Out</button>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Second slide -->
      <div class="carousel-item">
        <div class="row">
          <% for(let i=3; i<6 && i<products.length; i++) { %>
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="single-product">
              <a class="product-img" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                <img src="<%= products[i].imagePath %>" alt="<%= products[i].title %>" class="img-fluid" />
              </a>
              <div class="product-info p-3">
                <a class="title-link" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                  <h5 class="product-title mb-2"><%= products[i].title %></h5>
                </a>
                <div class="price mb-3">₹<%= products[i].price %></div>
                <% if(products[i].available) { %>
                <a href="/add-to-cart/<%= products[i]._id %>" class="btn btn-primary btn-block">Add to Cart</a>
                <% } else { %>
                <button class="btn btn-danger btn-block" disabled>Sold Out</button>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Third slide -->
      <div class="carousel-item">
        <div class="row">
          <% for(let i=6; i<9 && i<products.length; i++) { %>
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="single-product">
              <a class="product-img" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                <img src="<%= products[i].imagePath %>" alt="<%= products[i].title %>" class="img-fluid" />
              </a>
              <div class="product-info p-3">
                <a class="title-link" href="/products/<%= products[i].category ? products[i].category.slug : 'uncategorized' %>/<%= products[i]._id %>">
                  <h5 class="product-title mb-2"><%= products[i].title %></h5>
                </a>
                <div class="price mb-3">₹<%= products[i].price %></div>
                <% if(products[i].available) { %>
                <a href="/add-to-cart/<%= products[i]._id %>" class="btn btn-primary btn-block">Add to Cart</a>
                <% } else { %>
                <button class="btn btn-danger btn-block" disabled>Sold Out</button>
                <% } %>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
