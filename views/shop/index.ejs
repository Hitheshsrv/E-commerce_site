<%- include('./partials/header') %> 
<%- include('./partials/categories-navbar') %>

<div class="container-fluid">
  <!-- Flash messages -->
  <% if(successMsg || errorMsg) { %>
    <div class="row mt-3 mb-3">
      <div class="col-md-12 m-auto">
        <% if (successMsg) { %>
          <div id="success" class="alert alert-success">
            <%= successMsg %>
          </div>
        <% } else { %>
          <div id="success" class="alert alert-success d-none"></div>
        <% } %>
      </div>
      <div class="col-md-12 m-auto">
        <% if (errorMsg) { %>
          <div id="error" class="alert alert-danger">
            <%= errorMsg %>
          </div>
        <% } else { %>
          <div id="error" class="alert alert-danger d-none"></div>
        <% } %>
      </div>
    </div>
  <% } %>

  <!-- Page Title -->
  <div class="row mt-4 mb-4">
    <div class="col-12">
      <h1 class="text-center"><%= pageName || 'New Products' %></h1>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="product-grid">
    <% if (products && products.length > 0) { %>
      <% products.forEach(function(product) { %>
        <div class="product-card">
          <a href="/products/<%=product.category.slug%>/<%=product._id%>">
            <img src="<%= product.imagePath %>" alt="<%= product.title %>" class="product-image">
          </a>
          <div class="product-info">
            <a href="/products/<%=product.category.slug%>/<%=product._id%>">
              <h2 class="product-title"><%= product.title %></h2>
            </a>
            <div class="product-price">â‚¹<%= product.price %></div>
            <% if (product.available) { %>
              <button class="add-to-cart" onclick="window.location.href='/add-to-cart/<%=product._id%>'">
                Add to Cart
              </button>
            <% } else { %>
              <button class="add-to-cart" disabled style="background-color: #dc3545;">
                Sold Out
              </button>
            <% } %>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 text-center">
        <p>No products found.</p>
      </div>
    <% } %>
  </div>

  <%- include('./partials/pagination') %>
</div>

<%- include('./partials/footer') %>
