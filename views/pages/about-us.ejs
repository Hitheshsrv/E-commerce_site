<%- include("../shop/partials/header") %> 
<%- include("../shop/partials/categories-navbar") %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-12 m-auto text-justify">
      <h1 class="mt-4 mb-5 text-center">About Us</h1>
      <h3>Welcome to our store</h3>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores nam
        voluptatem adipisci sed amet ipsa quod reiciendis eos. Magnam ad
        sapiente aut a libero aliquam veritatis incidunt molestiae tempora?
      </p>
      <p>
        Maxime! Lorem ipsum dolor sit amet consectetur adipisicing elit. Labore
        autem assumenda vel laudantium quo ipsum omnis earum nostrum, excepturi
        quibusdam, dicta cupiditate voluptatibus aperiam molestiae? Facilis
        ipsum esse eligendi nobis.
      </p>
    </div>
    <div class="col-lg-8 col-md-12 mx-auto mt-3 mb-3">
      <h3>Our location on map</h3>
      <div class="mt-4" id="map" style="width: 100%; height: 400px;"></div>
    </div>

    <!-- Contact Form Section -->
    <div class="col-lg-8 col-md-12 mx-auto mt-5">
      <h3 class="text-center mb-4">Contact Us</h3>
      
      <!-- Flash Messages -->
      <% if(successMsg || errorMsg) { %>
        <div class="row mb-4">
          <div class="col-md-12">
            <% if (successMsg) { %>
              <div class="alert alert-success">
                <%= successMsg %>
              </div>
            <% } %>
            <% if (errorMsg) { %>
              <div class="alert alert-danger">
                <%= errorMsg %>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

      <!-- Contact Form -->
      <div class="contact-form-container">
        <form action="/pages/contact-us" method="POST" class="contact-form">
          <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="email">Your Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="message">Your Message</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="btn btn-primary btn-block">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/javascripts/map.js"></script>

<%- include("../shop/partials/footer") %>
