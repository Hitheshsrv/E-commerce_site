<%- include("../shop/partials/header") %>

<div class="container my-5">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h1>B2B Client Portal</h1>
      <p class="lead">Partner with us for your business needs</p>
    </div>
  </div>

  <!-- B2B Services -->
  <div class="row mb-5">
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-box-open"></i> Bulk Orders</h5>
          <p class="card-text">Get special pricing for bulk orders with dedicated support.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-truck"></i> Priority Shipping</h5>
          <p class="card-text">Expedited shipping options for business clients.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-headset"></i> Dedicated Support</h5>
          <p class="card-text">24/7 support for our business partners.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Form -->
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Get in Touch</h3>
          <form action="/b2b/contact" method="POST">
            <div class="form-group">
              <label for="companyName">Company Name</label>
              <input type="text" class="form-control" id="companyName" name="companyName" required>
            </div>
            <div class="form-group">
              <label for="email">Business Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-primary btn-block">Submit Inquiry</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../shop/partials/footer") %> 